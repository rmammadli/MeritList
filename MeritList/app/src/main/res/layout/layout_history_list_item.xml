<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:paddingLeft="@dimen/padding_xl"
        android:paddingRight="@dimen/padding_xl">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_practice_name_history_list_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="left|center_vertical"
            android:text="@string/text_rank_title_leaderboard"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_body" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_practice_status_history_list_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="right|center_vertical"
            android:text="@string/text_name_title_leaderboard"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_body" />

    </RelativeLayout>

</android.support.v7.widget.LinearLayoutCompat>