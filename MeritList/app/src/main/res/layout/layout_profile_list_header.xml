<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_list_header_height">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_height"
            android:layout_alignParentBottom="true"
            android:background="@color/colorWhite"
            android:orientation="vertical">

        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_height"
            android:layout_alignParentBottom="true"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_xl"
            android:clickable="true">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_detailname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_detail_name_first_name"
                    android:textColor="@color/colorGreyText"
                    android:textSize="@dimen/text_caption" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_detaildata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_detail_data_first_name"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_subheading" />
            </android.support.v7.widget.LinearLayoutCompat>

        </android.support.v7.widget.LinearLayoutCompat>

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/rimgv_profile"
            android:layout_width="@dimen/profile_fragment_profile_image_height"
            android:layout_height="@dimen/profile_fragment_profile_image_width"
            android:layout_centerInParent="true"
            android:src="@drawable/img_laxman_soni"
            app:siBorderColor="@color/colorPrimary"
            app:siBorderWidth="@dimen/dimen_zero" />

        <android.support.v7.widget.AppCompatImageButton
            android:layout_width="@dimen/button_big"
            android:layout_height="@dimen/button_big"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_xl"
            android:background="@drawable/ic_image_button_profile" />
    </RelativeLayout>

</RelativeLayout>