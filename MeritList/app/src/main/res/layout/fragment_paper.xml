<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                              xmlns:tools="http://schemas.android.com/tools"
                                              android:id="@+id/str_paper_fragment"
                                              android:layout_width="match_parent"
                                              android:layout_height="match_parent"
                                              android:background="@color/colorWhite"
                                              tools:context="androidclient.meritlist.in.meritlist.fragments.PaperFragment">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_height"
            android:background="@color/colorBackground"
            android:padding="@dimen/padding_xl">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/text_select_paper"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_subheading"/>

        </RelativeLayout>

        <ExpandableListView
            android:id="@+id/exlv_paper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_xxxxl"
            android:background="@color/colorWhite"
            android:groupIndicator="@drawable/selector_indicator_group_listview"
            android:scrollbars="vertical"/>

    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v4.widget.SwipeRefreshLayout>


