<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/str_practice_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="androidclient.meritlist.in.meritlist.fragments.PracticeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_practice_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_height"
            android:layout_alignParentTop="true"
            android:background="@color/colorBackground"
            android:padding="@dimen/padding_xl">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/text_select_practice"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_subheading"/>
        </RelativeLayout>

        <ExpandableListView
            android:id="@+id/exlv_practice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_practice_title"
            android:background="@color/colorWhite"
            android:groupIndicator="@drawable/selector_indicator_group_listview"
            android:scrollbars="vertical"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"/>

        <RelativeLayout
            android:id="@+id/rl_practice_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_height"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_xxxxl"
            android:background="@color/colorTrans"
            android:gravity="center">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_start_practice"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_big"
                android:background="@drawable/selector_btn_yellow_rounded"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_s"
                android:paddingLeft="@dimen/button_side_padding"
                android:paddingRight="@dimen/button_side_padding"
                android:paddingTop="@dimen/padding_s"
                android:text="@string/text_btn_start_practice"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_button"/>
        </RelativeLayout>

    </RelativeLayout>

</android.support.v4.widget.SwipeRefreshLayout>


