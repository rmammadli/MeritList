<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:minHeight="@dimen/list_item_height"
        android:padding="@dimen/padding_xl">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_description_doubt_list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_xxl"
            android:text="@string/text_rank_title_leaderboard"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_body" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_verified_indicator_doubt_list_item"
            android:layout_width="@dimen/progress_status_indicator_height"
            android:layout_height="@dimen/progress_status_indicator_width"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_solved"
            android:visibility="gone" />
    </RelativeLayout>

</android.support.v7.widget.LinearLayoutCompat>