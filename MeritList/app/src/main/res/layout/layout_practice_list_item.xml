<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:paddingLeft="@dimen/padding_xl"
        android:paddingRight="@dimen/padding_xl">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_practice_name_practice_list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/text_practice_name"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_body" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/cb_practice_status_practice_list_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:checked="true" />

    </RelativeLayout>

</android.support.v7.widget.LinearLayoutCompat>