<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_buttons_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/padding_xxl"
        android:visibility="gone">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_big"
            android:layout_marginBottom="@dimen/margin_xl"
            android:background="@drawable/selector_btn_yellow_rounded"
            fontPath="fonts/Montserrat-Regular.ttf"
            android:gravity="center"
            android:paddingBottom="@dimen/padding_s"
            android:paddingLeft="@dimen/button_side_padding"
            android:paddingRight="@dimen/button_side_padding"
            android:paddingTop="@dimen/padding_s"
            android:text="@string/text_btn_signin"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_button" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_xl"
            fontPath="fonts/Montserrat-Regular.ttf"
            android:text="@string/text_login_with"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_subheading" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/ibtn_facebook"
                android:layout_width="@dimen/social_button_width"
                android:layout_height="@dimen/social_button_height"
                android:layout_marginRight="@dimen/margin_xl"
                android:background="@drawable/ic_fb" />

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/ibtn_twitter"
                android:layout_width="@dimen/social_button_width"
                android:layout_height="@dimen/social_button_height"
                android:background="@drawable/ic_tw" />

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/ibtn_google"
                android:layout_width="@dimen/social_button_width"
                android:layout_height="@dimen/social_button_height"
                android:layout_marginLeft="@dimen/margin_xl"
                android:background="@drawable/ic_gg" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>