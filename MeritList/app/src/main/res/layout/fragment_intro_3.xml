<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/intro_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="32dp"
            fontPath="fonts/Montserrat-Regular.ttf"
            android:gravity="center"
            android:text="@string/title"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_logo_intro"
            android:layout_width="@dimen/logo_width_intro"
            android:layout_height="@dimen/logo_height_intro"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="@dimen/margin_xxxl"
            android:background="@drawable/logo_shark" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            fontPath="fonts/Montserrat-Regular.ttf"
            android:gravity="center"
            android:maxEms="18"
            android:text="@string/description"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:visibility="gone" />

    </FrameLayout>

</FrameLayout>