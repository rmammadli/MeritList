<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:paddingLeft="@dimen/padding_xl"
        android:paddingRight="@dimen/padding_xl">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_text_notifications_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:text="@string/text_rank_title_leaderboard"
                android:textColor="@color/colorBlackText"
                android:textSize="@dimen/text_body" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_time_notifications_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGreyText"
                android:textSize="@dimen/text_caption" />
        </android.support.v7.widget.LinearLayoutCompat>


        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/rb_status_notifications_notification_list_item"
            style="@style/RadioButtonStyleNotificationIndicator"
            android:layout_width="@dimen/notification_list_indicator_icon_width"
            android:layout_height="@dimen/notification_list_indicator_icon_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_indicator_notification_red"
            android:checked="false"
            android:clickable="false" />

    </RelativeLayout>

</android.support.v7.widget.LinearLayoutCompat>